@model IEnumerable<HouseRentManagement.Models.Property_Details>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/StyleSheet/Home/Index.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark"
         style="background-color: rgba(26, 26, 31, 0.7)">
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand ml-4" href="#">HOUSERENT</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="#">HOME</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#center">PROPERTIES</a>
                </li>
            </ul>
            <form class="form-inline my-2 w-50" action="@Url.Action("Search", "Home", FormMethod.Get)">
                <input class="form-control mr-sm-2"
                       type="search"
                       name="searchText"
                       placeholder="Enter the Name or City of the House here..."
                       aria-label="Search"
                       style="width: 65%; padding: 20px" />
                <button class="btn btn-success my-2 my-sm-0 p-2 w-25" type="submit">
                    Search
                </button>
            </form>
            <ul class="navbar-nav navbar-right mr-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white"
                       href="#"
                       id="navbarScrollingDropdown"
                       role="button"
                       data-toggle="dropdown"
                       aria-expanded="false">
                        REGISTER
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("CreateCustomer","Home")">As Customer</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("CreateSeller","Home")">As Seller</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-success p-2 text-white" href="@Url.Action("Login","Home")">LOGIN</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Carousel -->
    <div id="carouselExampleCaptions"
         class="carousel slide"
         data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions"
                data-slide-to="0"
                class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Index/Picture-1.jpg" height="720" class="d-block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h2>
                        Our Service are designed keeping in mind the unique need of the
                        people
                    </h2>
                    <p>
                        Register and avail the best rental property Management and get
                        your desired House
                    </p>
                    <a class="btn btn-success p-2 text-white col-3" href="@Url.Action("CreateCustomer","Home")">REGISTER AS CUSTOMER</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Index/Picture-2.jpg" height="720" class="d-block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="font-weight-bold">
                        Wasting your vacaction time on yout tenants issues?
                    </h2>
                    <p>Leave the hassled to us and List your home here</p>
                    <a class="btn btn-success p-2 text-white col-3" href="@Url.Action("CreateSeller","Home")">REGISTER AS SELLER</a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/Index/Picture-3.jpg" height="720" class="block w-100" />
                <div class="carousel-caption d-none d-md-block">
                    <h2>Worried about Managing Your Property</h2>
                    <p>We can help and give you the best Service?</p>
                    <a class="btn btn-success p-2 text-white col-3" href="@Url.Action("Login","Home")">LOGIN</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev"
           href="#carouselExampleCaptions"
           role="button"
           data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next"
           href="#carouselExampleCaptions"
           role="button"
           data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- Content -->
    <div class="card float-left"
         id="center"
         style="background: linear-gradient(247deg, #e2e2e2, #c9d6ff)">
        <div class="card-body">
            <h4 class="card-title">
                PROPERTIES
                <i class="fa fa-home" aria-hidden="true"></i>
            </h4>
            @foreach (var item in Model)
            {
                <div class="card mb-3" style="max-width: 100%; border-radius: 10px">
                    <div class="row no-gutters">
                        <div class="col-4 m-5">
                            <img src="@Url.Content(item.Front_View_img)" class="w-100" height="250" />
                        </div>
                        <div class="col-6 m-2">
                            <div class="card-body">
                                <div class="card-text">
                                    <table class="table-responsive table-sm">
                                        <thead class="thead-inverse">
                                            <tr>
                                                <th colspan="2">
                                                    <h5>@item.Property_Name</h5>
                                                    <p>@item.Property_Locality,@item.Property_City</p>
                                                </th>

                                                <th><small class="text-muted">Monthly Rent</small><h5>&#8377;@item.Monthly_Rent</h5><br /></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <small class="text-muted">BHK</small><br />
                                                    @item.BHK
                                                </td>
                                                <td>
                                                    <small class="text-muted">Balcony</small><br />
                                                    @item.Balcony
                                                </td>
                                                <td>
                                                    <small class="text-muted">Furnishing</small><br />
                                                    @item.Furnish_Type
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <small class="text-muted">Status</small><br />
                                                    @item.Construction_Status
                                                </td>
                                                <td>
                                                    <small class="text-muted">PropertyAge</small><br />
                                                    @item.Property_Age
                                                </td>
                                                <td>
                                                    <small class="text-muted">Facing</small><br />
                                                    @item.Facing
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="float-right col-10">
                                <a role="button"
                                   class="btn btn-primary mr-5 float-right col-5"
                                   href="@Url.Action("Login")">
                                    View Details
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery-3.6.0.slim.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}